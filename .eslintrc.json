{
  "root": true,
  "extends": [
    "plugin:jsdoc/recommended",
    "wikimedia/client-common",
    "wikimedia/language/es2018"
  ],
  "globals": {
    "Gerrit": true,
    "Polymer": true
  },
  "plugins": [ "jsdoc" ],
  "rules": {
    "arrow-parens": [ "error", "as-needed" ],
    "comma-dangle": "off",
    "computed-property-spacing": "off",
    "eqeqeq": "off",
    "indent": [ "error", 2 ],
    "no-cond-assign": "off",
    "no-underscore-dangle": "off",
    "no-unused-vars": "off",
    "no-useless-escape": "off",
    "no-var": "off",
    "prefer-const": "off",
    "space-in-parens": "off",
    "valid-jsdoc": "off"
  },
  "settings": {
    "jsdoc": {
      "mode": "typescript"
    }
  }
}
