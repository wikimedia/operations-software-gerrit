<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.wikimedia</groupId>
  <artifactId>gerrit</artifactId>
  <version>1.0</version>
  <name>Gerrit packaging for Wikimedia</name>

  <properties>
    <gerrit.version>3.9.5-21-g553ea468a1</gerrit.version>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <!-- We need File Mappers MDEP-628 -->
        <version>3.1.2</version>
        <executions>
          <execution>
            <id>import upstream gerrit war</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
              <configuration>
                <!-- Ensure `gerrit.war` is always written -->
                <overWriteReleases>true</overWriteReleases>
                <artifactItems>
                  <artifactItem>
                    <groupId>com.google.gerrit</groupId>
                    <artifactId>gerrit-war</artifactId>
                    <version>${gerrit.version}</version>
                    <type>war</type>
                    <outputDirectory>${project.basedir}</outputDirectory>
                    <destFileName>gerrit.war</destFileName>
                  </artifactItem>
                </artifactItems>
              </configuration>
          </execution>
          <execution>
            <id>extract upstream plugins</id>
            <phase>package</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
              <configuration>
                <ignorePermissions>true</ignorePermissions>
                <artifactItems>
                  <artifactItem>
                    <groupId>com.google.gerrit</groupId>
                    <artifactId>gerrit-war</artifactId>
                    <version>${gerrit.version}</version>
                    <type>war</type>
                    <overWrite>true</overWrite>
                    <outputDirectory>${project.basedir}/plugins</outputDirectory>
                    <fileMappers>
                      <org.codehaus.plexus.components.io.filemappers.FlattenFileMapper />
                    </fileMappers>
                  </artifactItem>
                </artifactItems>
                <includes>WEB-INF/plugins/*.jar</includes>
                <outputDirectory>${project.build.directory}/plugins</outputDirectory>
              </configuration>
          </execution>
        </executions>


      </plugin>
    </plugins>
  </build>

</project>
